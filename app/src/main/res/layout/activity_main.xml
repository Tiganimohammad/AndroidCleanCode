<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/cityname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:textSize="@dimen/lat_long_text_size"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/condition_imgview"
        android:layout_toEndOf="@+id/condition_imgview"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <TextView
        android:id="@+id/dayhigh_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:textSize="@dimen/lat_long_text_size"
        android:layout_alignBottom="@+id/condition_imgview"
        android:layout_alignLeft="@+id/cityname_text"
        android:layout_alignStart="@+id/cityname_text" />

    <TextView
        android:id="@+id/currenttemp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:textSize="@dimen/lat_long_text_size"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/cityname_text"
        android:layout_toEndOf="@+id/cityname_text" />

    <ImageView
        android:id="@+id/condition_imgview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/daylow_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/lat_long_text_size"
        android:layout_alignBottom="@+id/dayhigh_text"
        android:layout_toRightOf="@+id/dayhigh_text"
        android:layout_toEndOf="@+id/dayhigh_text"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_alignTop="@+id/dayhigh_text" />


</RelativeLayout>
